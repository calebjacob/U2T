@import('nib')
importAll('./lib')
importAll('./globals')
importAll('./atoms')
importAll('./molecules')
importAll('./organisms')
importAll('./pages')

global-reset()

*,
*:before,
*:after
  box-sizing: border-box
  -webkit-font-smoothing: antialiased
  -webkit-text-size-adjust: 100%
  prefix(tap-highlight-color, rgba(0,0,0,0))

html,
body
  overflow-x: hidden

body
  font-family: $fontMain
  font-size: 16px
  line-height: 1.3em
  font-weight: 400
  color: $white
  background: $black

section
  margin-bottom: 1.2em

h1
  margin-bottom: 0.7em

h2
  font-size: 2em
  line-height: 1.3em
  margin-bottom: 0.5em
  font-family: $fontSecondary
  // font-style: italic
  text-transform: uppercase
  color: $colorMain

h3
  font-size: 1.5em
  line-height: 1.4em
  margin-bottom: 0.6em
  color: $colorMain
  font-family: $fontSecondary
  text-transform: uppercase

h4
  font-weight: 700

p
  margin-bottom: 1em

a
  text-decoration: none
  font-weight: 700
  border-bottom: 1px solid
  color: $white

  &:hover
    opacity: 0.7
