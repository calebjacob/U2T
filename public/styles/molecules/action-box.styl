.action-box
  text-align: center
  background: $white
  color: $black
  padding: 3.6em
  font-style: italic

  @media (max-width: 990px)
    width: calc(100% + 2.4em)
    margin-left: -1.2em

  @media (max-width: 690px)
    padding: 3.6em 1.2em

  h2
    color: $black

.action-box__content
  margin-bottom: 1.8em

  p
    margin-bottom: 0

.action-box__actions
  iframe
    margin-bottom: 0.6em

    &:last-of-type
      margin-bottom: 0
